{
  "source": {
    "include": ["src"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs/|docsDev/|dist/|coverage/)"
  },
  "plugins": ["plugins/markdown", "node_modules/better-docs/category"],
  "tags": {
    "allowUnknownTags": true
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "markdown": {
    "idInHeadings": true
  },
  "opts": {
    "recurse": true,
    "destination": "./docsDev/",
    "template": "node_modules/better-docs",
    "tutorials": "./docsSrc/tutorials"
  }
}
