{
  "name": "nhtsa-api-wrapper",
  "version": "3.0.0",
  "description": "Monorepo for the @shaggytools/nhtsa-api-wrapper package",
  "author": "Brandon Eichler <github.com/shaggytech>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "config/*",
    "packages/*"
  ],
  "packageManager": "pnpm@7.26.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=7.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ShaggyTech/nhtsa-api-wrapper.git",
    "homepage": "https://github.com/ShaggyTech/nhtsa-api-wrapper"
  },
  "homepage": "https://www.shaggytech.com/nhtsa-api-wrapper",
  "bugs": {
    "url": "https://github.com/ShaggyTech/nhtsa-api-wrapper/issues"
  },
  "keywords": [
    "VIN",
    "Vehicle Identification Number",
    "NHTSA.gov",
    "NHTSA.dot.gov",
    "NHTSA",
    "National Highway Traffic Safety Administration",
    "api",
    "VIN decode",
    "VIN decoder",
    "typescript"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "backfill": "6.1.26",
    "eslint-config-custom": "workspace:*",
    "husky": "8.0.3",
    "prettier": "2.8.3",
    "prettier-config": "workspace:*",
    "rimraf": "4.1.1",
    "tsconfig": "workspace:*",
    "tslib": "2.4.1",
    "turbo": "1.7.0",
    "typescript": "4.9.4",
    "vite": "4.0.4",
    "vite-plugin-dts": "1.7.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm prettier",
      "pre-push": "pnpm verify"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
