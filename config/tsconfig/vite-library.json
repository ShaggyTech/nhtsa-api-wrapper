{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Vite-Library-Mode",
  "extends": "./base.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "noImplicitReturns": true,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "resolveJsonModule": true,
    "target": "ESNext",
    "useDefineForClassFields": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
